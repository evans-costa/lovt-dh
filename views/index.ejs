<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LOVT</title>
  <link rel="stylesheet" href="stylesheets/styles.css" />
</head>
<body>
  <header>
    <div id="title-div">
      <h1 class="title">LOVT</h1>
      <span id="title-description">You love, your loft!</span>
    </div>    
    <img class="hamburguer-menu" src="images/menu.svg" alt="Menu de links" />
    <div id="sidebar-menu">
      <nav>
        <ul>
          <li>Sales</li>
          <li>Your style</li>
          <li>Contact</li>
        </ul>
      </nav>      
    </div>
  </header>
  
  <main>
    <section class="banner">
      <button class="arrow-button">
        <img src="images/left-arrow.svg" alt="Left arrow of carrousel" />
      </button>

      <button class="arrow-button">
        <img src="images/right-arrow.svg" alt="Right arrow of carrousel" />
      </button>
    </section>
    
    <section class="sales">
      <% for (let immobile of immobileList) { %>
        <div class="advertisement">
          <img src="<%=immobile.picture%>" />
          <div>
            <strong><%=immobile.price%></strong>
            <span class="green-text"><%=immobile.istatus%></span>
          </div>
          <p id="paragraph">
            <%=immobile.idescription%>
          </p>
        </div>
      <% } %>
    </section>

    <section class="styles">
      <h2>Your Style</h2>
      <div id="style-industrial" class="house-style">
        <div>
          <strong>Industrial</strong>
        </div>
      </div>
     
      <div id="style-modern" class="house-style">
        <div>
          <strong>Modern</strong>
        </div>
      </div>
     
      <div id="style-classic" class="house-style">
        <div>
          <strong>Classic</strong>
        </div>        
      </div>
    </section>
  </main>
  
  <footer>
    <img id="google-maps" src="images/lastImage.svg" alt="Google maps image" />
    <div id="contact-us">
      <form>
        <h2>Contact us</h2>
        <textarea id="contact-message"></textarea>
        <span id="contact-details"></span>
        <input type="email" placeholder="Type your email"/>
        <button type="submit">Send message</button>
      </form>
    </div>
    <div id="contacts">
      <span>LOVT - You love, your loft!</span>
      <span>Broad St, Newark, NJ 07102</span>
      <span>USA +1 (973) 854-555-548</span>
      <span>contact@lovtrealstate.com</span>
      <strong>OUR SOCIAL MEDIAS:</strong>
      <div>
        <img src="images/instagram.svg" alt="Instagram"/>
        <img src="images/facebook.svg" alt="Facebook"/>
        <img src="images/whatsapp.svg" alt="Whatsapp"/>
      </div>
    </div>
  </footer>

  <script src="javascripts/index.js"></script>
</body>
</html>